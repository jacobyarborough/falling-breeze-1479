<h1>List of All Plots by Number and Associated Plants</h1>

<% @plots.each do |plot| %>
  <div id="plot-<%= plot.id %>">
  Plot Number: <%= plot.number %><br>
  <% plot.plants.each do |plant| %>
    <%= plant.name %> <%= link_to("Remove #{plant.name}", "/plot_plants/#{plant.plot_plant_id(plot.id)}", method: :delete) %><br>
  <% end %>
  </div>
<% end %>